html
    head
        title= title
        //- stylesheets
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous")
        link(rel="stylesheet" href="/stylesheets/colors.css")
        //- font awesome
        block head
    body.bg-light
        header.bg-jet.text-powder
            .navbar
                a.navbar-brand.text-powder(href='/') Premier League Predictor
            ul.nav
                li.nav-item
                    a.nav-link.text-orange(href="/") Home
                li.nav-item
                    a.nav-link.text-orange(href="/predictions") Make Predictions
                li.nav-item
                    a.nav-link.text-orange(href="/games/22") View Scores
                if (!user)
                    li.nav-item
                        a.nav-link.text-orange(href="/users/login") Log In
                    li.nav-item
                        a.nav-link.text-orange(href="/users/signup") Create Account
                else
                    li.nav-item
                        a.nav-link.text-orange(href="/users/profile") Profile
                    li.nav-item
                        a.nav-link.text-orange(href="/users/logout") Logout

        main
            if (message && message.length > 0)
                div #{message}
            block content

        footer.container
            .row 
                .col Created by Jeff Heller
                .col 
                    a(href="mailto:heller.jeffrey@gmail.com") heller.jeffrey@gmail.com

        block script
