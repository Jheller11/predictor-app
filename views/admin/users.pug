extends ../layout.pug

block content
    .card
        .card-body
            h5.card-title All Registered Users

            table.table
                thead
                    tr
                        th(scope='col') #
                        th(scope='col') User ID
                        th(scope='col') Email
                        th(scope='col') Name
                        th(scope='col') Admin
                        th(scope='col') Count
                tbody
                    each user, i in users
                        tr
                            th(scope='row') #{i + 1}
                            td #{user.id}
                            td #{user.local.email}
                            td #{user.local.displayName}
                            td #{user.admin}
                            td #{user.count}
                            